{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
          "label": "run eslint",
          "type": "shell",
          "command": "${workspaceFolder}/node_modules/.bin/eslint *.js",
          "windows": {
              "command": "${workspaceFolder}\\node_modules\\.bin\\eslint *.js"
          },
          "problemMatcher": [
            "$eslint-stylish"
          ]
        }
    ]
}
